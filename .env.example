# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/intervention_tracking_db

# Database Pool Settings
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000

# SSL Configuration
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=false

# Application Settings
NODE_ENV=development
PORT=3000

# JWT Configuration (Field Agent Authentication)
JWT_SECRET=change-this-to-a-secure-random-string-minimum-32-characters-long
JWT_EXPIRY=30d

# Email Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-password
SMTP_FROM=noreply@example.com

# File Upload Configuration (Intervention Photos)
MAX_FILE_SIZE=1048576
UPLOAD_DIR=./public/uploads/interventions
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# reCAPTCHA
RECAPTCHA_SECRET_KEY=your-recaptcha-secret

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Webhook Configuration
WEBHOOK_TIMEOUT=30000
WEBHOOK_MAX_RETRIES=3

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_BATCH_SIZE=100
