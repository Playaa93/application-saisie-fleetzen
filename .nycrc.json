{
  "all": true,
  "check-coverage": true,
  "reporter": ["text", "html", "lcov", "json-summary"],
  "report-dir": "./coverage",
  "statements": 80,
  "branches": 75,
  "functions": 80,
  "lines": 80,
  "include": [
    "app/**/*.{js,jsx,ts,tsx}",
    "components/**/*.{js,jsx,ts,tsx}",
    "lib/**/*.{js,jsx,ts,tsx}"
  ],
  "exclude": [
    "**/*.d.ts",
    "**/*.test.{js,jsx,ts,tsx}",
    "**/*.spec.{js,jsx,ts,tsx}",
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/node_modules/**",
    "**/coverage/**",
    "**/.next/**"
  ],
  "cache": true,
  "temp-dir": "./coverage/.nyc_output"
}
