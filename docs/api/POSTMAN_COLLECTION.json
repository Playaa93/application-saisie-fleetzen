{
  "info": {
    "name": "Form Management API",
    "description": "Complete collection for testing the Form Management API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "12345"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000/v1",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "form_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "submission_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('jwt_token', response.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"SecureP@ssw0rd\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('jwt_token', response.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"SecureP@ssw0rd\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwt_token}}"
                }
              ]
            },
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth/logout",
              "host": ["{{base_url}}"],
              "path": ["auth", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Forms",
      "item": [
        {
          "name": "List Forms",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/forms?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["forms"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Create Form",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('form_id', response.data.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Contact Form\",\n  \"description\": \"Simple contact form\",\n  \"status\": \"published\",\n  \"fields\": [\n    {\n      \"name\": \"name\",\n      \"label\": \"Your Name\",\n      \"type\": \"text\",\n      \"required\": true,\n      \"validation\": {\n        \"minLength\": 2,\n        \"maxLength\": 100\n      }\n    },\n    {\n      \"name\": \"email\",\n      \"label\": \"Email Address\",\n      \"type\": \"email\",\n      \"required\": true\n    },\n    {\n      \"name\": \"message\",\n      \"label\": \"Message\",\n      \"type\": \"textarea\",\n      \"required\": true,\n      \"validation\": {\n        \"minLength\": 10,\n        \"maxLength\": 1000\n      }\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/forms",
              "host": ["{{base_url}}"],
              "path": ["forms"]
            }
          }
        },
        {
          "name": "Get Form",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/forms/{{form_id}}",
              "host": ["{{base_url}}"],
              "path": ["forms", "{{form_id}}"]
            }
          }
        },
        {
          "name": "Update Form",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"archived\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/forms/{{form_id}}",
              "host": ["{{base_url}}"],
              "path": ["forms", "{{form_id}}"]
            }
          }
        },
        {
          "name": "Delete Form",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/forms/{{form_id}}",
              "host": ["{{base_url}}"],
              "path": ["forms", "{{form_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Submissions",
      "item": [
        {
          "name": "Submit Form",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('submission_id', response.data.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"data\": {\n    \"name\": \"Jane Smith\",\n    \"email\": \"jane@example.com\",\n    \"message\": \"This is a test message for the contact form.\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/forms/{{form_id}}/submissions",
              "host": ["{{base_url}}"],
              "path": ["forms", "{{form_id}}", "submissions"]
            }
          }
        },
        {
          "name": "Get Form Submissions",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/forms/{{form_id}}/submissions?page=1&limit=20",
              "host": ["{{base_url}}"],
              "path": ["forms", "{{form_id}}", "submissions"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Get Submission",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/submissions/{{submission_id}}",
              "host": ["{{base_url}}"],
              "path": ["submissions", "{{submission_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Analytics",
      "item": [
        {
          "name": "Get Form Analytics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/forms/{{form_id}}/analytics?period=month",
              "host": ["{{base_url}}"],
              "path": ["forms", "{{form_id}}", "analytics"],
              "query": [
                {
                  "key": "period",
                  "value": "month"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
